
<div class="HeaderVideo">
    <video
        class="video-large"
        autoplay
        muted
        loop
        style="width: 100%; z-index: -1;"
    >
        <source
            src="https://cdn.shopify.com/videos/c/o/v/84ed64b3e9a3488d934ba20c537d53b3.mp4"
            type="video/mp4"
        />
        Your browser does not support the video tag.
    </video>
    <video
        class="video-small"
        autoplay
        muted
        loop
        style="width: 100%; z-index: -1;"
    >
        <source
            src="https://cdn.shopify.com/videos/c/o/v/9609a6e7b80140f98ae0c00e10462113.mp4"
            type="video/mp4"
        />
        Your browser does not support the video tag.
    </video>
</div>

{%stylesheet%}
.video-large {
        display: block; /* Default display for large screens */
    }
    .video-small {
        display: none;
    }

    @media (max-width: 821px) {
        .video-large {
            display: none; /* Hide the large video for smaller screens */
        }
        .video-small {
            display: block; /* Show the small video for smaller screens */
        }
    }
{%endstylesheet%}




